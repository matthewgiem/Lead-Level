<h1 class="center">Create an account:</h1>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
  <form action="/user/new" method="post">
    <div class= "form-group">
      <label>Choose a User Name:</label>
      <input type="text" name="user_name" class="form-control input-lg">
    </div>
    <div class= "form-group">
      <label>Choose a Password:</label>
      <input type="password" name="password" class="form-control input-lg">
    </div>
    <div class= "form-group">
      <label>Re-enter Password:</label>
      <input type="password" name="password_confirmation" class="form-control input-lg">
    </div>
  <button type="submit" name="button" class="btn btn-success btn-lg btn-block">Submit</button>
  </form>
</div>
